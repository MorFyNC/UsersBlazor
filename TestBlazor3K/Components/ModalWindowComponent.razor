<div class="modal" style="display: @(isOpen ? "block" : "none");">
    <div class="modal-content">
        <span class="close" @onclick="CloseModal">&times;</span>
        <h3>@Title</h3>
        <p>@Content</p>
        <button @onclick="CloseModal">@ButtonContent</button>
    </div>
</div>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 50%;
        max-width: 600px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
        }

    button {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>

@code {
    private bool isOpen = true;
    [Parameter] public string Title { get; set; } = "Default Title";
    [Parameter] public string Content { get; set; } = "Default Content";
    [Parameter] public string ButtonContent { get; set; } = "Close";
    private void CloseModal()
    {
        isOpen = false;
    }
}